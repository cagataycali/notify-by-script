{
  "manifest_version": 2,
  "name": "Notify by Script Condition",
  "description": "Google Chrome Browser extension for setting alarms/notifications that triggered by script conditions.",
  "version": "1.0.2",
  "author": "Ufuk Uzun",
  "icons": {
    "128": "icon-128.png",
    "256": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "main.js",
      "jquery.min.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "alarms",
    "notifications",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
