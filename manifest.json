{
  "manifest_version": 2,
  "name": "Notify by Script Condition",
  "description": "Google Chrome Browser extension for setting alarms/notifications that triggered by conditions.",
  "version": "1.0.0",
  "author": "Ufuk Uzun",
  "icons": {
    "256": "icon.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "main.js",
      "jquery.min.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "alarms",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
